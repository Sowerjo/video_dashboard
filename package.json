{
  "name": "video-dashboard-app",
  "version": "1.0.0",
  "description": "Dashboard futurista para organização e visualização de vídeos em pastas",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "8.1.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-icons": "^5.5.0",
    "styled-components": "^6.1.1",
    "video.js": "^8.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "babel-loader": "^9.1.3",
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "start": "webpack --watch",
    "build-renderer": "webpack",
    "build": "webpack",
    "electron": "electron .",
    "dist": "npm run build-renderer && electron-builder"
  },
  "build": {
    "appId": "com.jogus.videodashboard",
    "productName": "Video Dashboard Futurista",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/**/*",
      "main.js",
      "package.json",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "bin/",
        "to": "bin/",
        "filter": ["**/*"]
      },
      {
        "from": "thumbs/",
        "to": "thumbs/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    }
  }
}
